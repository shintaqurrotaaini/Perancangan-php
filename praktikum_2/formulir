<body>
<div id="formCard" class="card">
    <h2>Input Data</h2>
    <label>Masukkan Nama :</label><br>
    <input type="text" id="nama" placeholder="Masukkan nama"><br>

    <label>Masukkan Alamat :</label><br>
    <input type="text" id="alamat" placeholder="Masukkan alamat"><br>

    <label>Masukkan Umur :</label><br>
    <input type="number" id="umur" placeholder="Masukkan umur"><br>

    <label>Masukkan Kelas :</label><br>
    <input type="text" id="kelas" placeholder="Masukkan kelas"><br>

    <button onclick="tampilkanHasil()">Proses</button>
  </div>

  <div id="hasilCard" class="card hidden">
    <h2>Hasil Data Input</h2>
    <div class="hasil">
      <p>Data nama yang diinputkan adalah: <b id="outNama"></b></p>
      <p>Alamat anda adalah: <b id="outAlamat"></b></p>
      <p>Umur Anda adalah: <b id="outUmur"></b></p>
      <p>Kelas Anda adalah: <b id="outKelas"></b></p>
    </div>
    <button onclick="kembali()">Kembali ke Form</button>
  </div>

  <script>
    function tampilkanHasil() {
      // Ambil nilai dari input
      const nama = document.getElementById("nama").value;
      const alamat = document.getElementById("alamat").value;
      const umur = document.getElementById("umur").value;
      const kelas = document.getElementById("kelas").value;

      if (!nama || !alamat || !umur || !kelas) {
        alert("Semua data harus diisi!");
        return;
      }
      document.getElementById("outNama").textContent = nama;
      document.getElementById("outAlamat").textContent = alamat;
      document.getElementById("outUmur").textContent = umur;
      document.getElementById("outKelas").textContent = kelas;

      // Sembunyikan form dan tampilkan hasil
      document.getElementById("formCard").classList.add("hidden");
      document.getElementById("hasilCard").classList.remove("hidden");
    }

    function kembali() {
      document.getElementById("formCard").classList.remove("hidden");
      document.getElementById("hasilCard").classList.add("hidden");
      document.getElementById("nama").value = "";
      document.getElementById("alamat").value = "";
      document.getElementById("umur").value = "";
      document.getElementById("kelas").value = "";
    }
  </script>

